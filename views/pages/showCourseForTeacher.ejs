                                <tbody>

                                    <%  for(let i = 0 ; i < teacher.course.length ; i ++) { %>
                                    <tr>
                                        <td>
                                            <%=teacher.course[i].sub_id.sub_id%>
                                        </td>
                                        <td>
                                            <%=teacher.course[i].sub_id.sub_name%>
                                        </td>
                                        <td>
                                            <%=teacher.course[i].section%>
                                        </td>
                                        <td>
                                            <%=teacher.course[i].student.length%>
                                        </td>
                                        <td><a href="/manageCourse/courseInfo/<%= teacher.course[i]._id%>"
                                            class="btn btn-primary">จัดการคอร์สเรียน</a></td>

                                    </tr>
                                    <%    }
%>
                                </tbody>
                            </table>
                        </div>
                    </div>
