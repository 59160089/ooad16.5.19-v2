<%- include('../layouts/Header'); -%>
<%- include('../layouts/CSS'); -%>
<%- include('../layouts/endHeader'); -%>

<div id="wrapper">
  <%- include('../layouts/Sidebar'); -%>


  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

      <!-- Topbar -->
      <nav id="year" class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow"></nav>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <div class="container">

          <h1 align="center">จัดการปีการศึกษา</h1>
          <form method="post" action="/manageYear/update">
            <div class="form-group">
              ปีการศึกษาปัจจุบัน <br>
              <input type="text" class="form-control" id="years" name="year" placeholder="ปีการศึกษาปัจจุบัน"
                value="<%= year[0].year %>">
            </div>
            <div class="form-group">
              ภาคการศึกษา <br>
              <select class="form-control" id="semesters" name="semester">
                <option hidden><%= year[0].semester %></option>
                <option>ภาคต้น</option>
                <option>ภาคปลาย</option>
                <option>ภาคฤดูร้อน</option>
              </select>
            </div>

            <button onclick="setYear()" type="submit" class="btn btn-info float-right">ยืนยัน</button>

          </form>
        </div>




      </div>
      <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

  </div>
  <!-- End of Content Wrapper -->

</div>


<%- include('../layouts/Bottom'); -%>